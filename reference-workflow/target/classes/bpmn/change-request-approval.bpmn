<?xml version="1.0" encoding="UTF-8"?>
<bpmn:definitions xmlns:bpmn="http://www.omg.org/spec/BPMN/20100524/MODEL"
                  xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI"
                  xmlns:dc="http://www.omg.org/spec/DD/20100524/DC"
                  xmlns:camunda="http://camunda.org/schema/1.0/bpmn"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:di="http://www.omg.org/spec/DD/20100524/DI"
                  id="Definitions_1"
                  targetNamespace="http://bpmn.io/schema/bpmn">
  
  <bpmn:process id="changeRequestApproval" name="Change Request Approval" isExecutable="true">
    
    <bpmn:startEvent id="StartEvent_1" name="Change Request Submitted">
      <bpmn:outgoing>Flow_1</bpmn:outgoing>
    </bpmn:startEvent>
    
    <bpmn:serviceTask id="Task_ValidateData" name="Validate Data" camunda:delegateExpression="${validateDataDelegate}">
      <bpmn:incoming>Flow_1</bpmn:incoming>
      <bpmn:outgoing>Flow_2</bpmn:outgoing>
    </bpmn:serviceTask>
    
    <bpmn:exclusiveGateway id="Gateway_DataValid" name="Data Valid?">
      <bpmn:incoming>Flow_2</bpmn:incoming>
      <bpmn:outgoing>Flow_Valid</bpmn:outgoing>
      <bpmn:outgoing>Flow_Invalid</bpmn:outgoing>
    </bpmn:exclusiveGateway>
    
    <bpmn:serviceTask id="Task_CheckPolicy" name="Check OPA Policy" camunda:delegateExpression="${checkPolicyDelegate}">
      <bpmn:incoming>Flow_Valid</bpmn:incoming>
      <bpmn:outgoing>Flow_3</bpmn:outgoing>
    </bpmn:serviceTask>
    
    <bpmn:exclusiveGateway id="Gateway_PolicyDecision" name="Policy Decision">
      <bpmn:incoming>Flow_3</bpmn:incoming>
      <bpmn:outgoing>Flow_Approved</bpmn:outgoing>
      <bpmn:outgoing>Flow_RequiresReview</bpmn:outgoing>
      <bpmn:outgoing>Flow_Rejected</bpmn:outgoing>
    </bpmn:exclusiveGateway>
    
    <bpmn:userTask id="Task_ManualReview" name="Manual Review" camunda:candidateGroups="reviewers">
      <bpmn:documentation>Review the change request and make an approval decision</bpmn:documentation>
      <bpmn:incoming>Flow_RequiresReview</bpmn:incoming>
      <bpmn:outgoing>Flow_4</bpmn:outgoing>
      <bpmn:extensionElements>
        <camunda:formData>
          <camunda:formField id="approved" label="Approve?" type="boolean" />
          <camunda:formField id="comments" label="Comments" type="string" />
        </camunda:formData>
      </bpmn:extensionElements>
    </bpmn:userTask>
    
    <bpmn:exclusiveGateway id="Gateway_ManualDecision" name="Manual Decision">
      <bpmn:incoming>Flow_4</bpmn:incoming>
      <bpmn:outgoing>Flow_ManualApproved</bpmn:outgoing>
      <bpmn:outgoing>Flow_ManualRejected</bpmn:outgoing>
    </bpmn:exclusiveGateway>
    
    <bpmn:serviceTask id="Task_ApplyChange" name="Apply Change" camunda:delegateExpression="${applyChangeDelegate}">
      <bpmn:incoming>Flow_Approved</bpmn:incoming>
      <bpmn:incoming>Flow_ManualApproved</bpmn:incoming>
      <bpmn:outgoing>Flow_5</bpmn:outgoing>
    </bpmn:serviceTask>
    
    <bpmn:serviceTask id="Task_SendNotification" name="Send Notification" camunda:delegateExpression="${notificationDelegate}">
      <bpmn:incoming>Flow_5</bpmn:incoming>
      <bpmn:incoming>Flow_Invalid</bpmn:incoming>
      <bpmn:incoming>Flow_Rejected</bpmn:incoming>
      <bpmn:incoming>Flow_ManualRejected</bpmn:incoming>
      <bpmn:outgoing>Flow_6</bpmn:outgoing>
    </bpmn:serviceTask>
    
    <bpmn:endEvent id="EndEvent_1" name="Process Complete">
      <bpmn:incoming>Flow_6</bpmn:incoming>
    </bpmn:endEvent>
    
    <!-- Flow definitions -->
    <bpmn:sequenceFlow id="Flow_1" sourceRef="StartEvent_1" targetRef="Task_ValidateData" />
    <bpmn:sequenceFlow id="Flow_2" sourceRef="Task_ValidateData" targetRef="Gateway_DataValid" />
    <bpmn:sequenceFlow id="Flow_Valid" name="Yes" sourceRef="Gateway_DataValid" targetRef="Task_CheckPolicy">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">${dataValid == true}</bpmn:conditionExpression>
    </bpmn:sequenceFlow>
    <bpmn:sequenceFlow id="Flow_Invalid" name="No" sourceRef="Gateway_DataValid" targetRef="Task_SendNotification">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">${dataValid == false}</bpmn:conditionExpression>
    </bpmn:sequenceFlow>
    <bpmn:sequenceFlow id="Flow_3" sourceRef="Task_CheckPolicy" targetRef="Gateway_PolicyDecision" />
    <bpmn:sequenceFlow id="Flow_Approved" name="Approved" sourceRef="Gateway_PolicyDecision" targetRef="Task_ApplyChange">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">${policyApproved == true &amp;&amp; requiresAdditionalApproval == false}</bpmn:conditionExpression>
    </bpmn:sequenceFlow>
    <bpmn:sequenceFlow id="Flow_RequiresReview" name="Requires Review" sourceRef="Gateway_PolicyDecision" targetRef="Task_ManualReview">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">${requiresAdditionalApproval == true}</bpmn:conditionExpression>
    </bpmn:sequenceFlow>
    <bpmn:sequenceFlow id="Flow_Rejected" name="Rejected" sourceRef="Gateway_PolicyDecision" targetRef="Task_SendNotification">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">${policyApproved == false &amp;&amp; requiresAdditionalApproval == false}</bpmn:conditionExpression>
    </bpmn:sequenceFlow>
    <bpmn:sequenceFlow id="Flow_4" sourceRef="Task_ManualReview" targetRef="Gateway_ManualDecision" />
    <bpmn:sequenceFlow id="Flow_ManualApproved" name="Approved" sourceRef="Gateway_ManualDecision" targetRef="Task_ApplyChange">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">${approved == true}</bpmn:conditionExpression>
    </bpmn:sequenceFlow>
    <bpmn:sequenceFlow id="Flow_ManualRejected" name="Rejected" sourceRef="Gateway_ManualDecision" targetRef="Task_SendNotification">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">${approved == false}</bpmn:conditionExpression>
    </bpmn:sequenceFlow>
    <bpmn:sequenceFlow id="Flow_5" sourceRef="Task_ApplyChange" targetRef="Task_SendNotification" />
    <bpmn:sequenceFlow id="Flow_6" sourceRef="Task_SendNotification" targetRef="EndEvent_1" />
    
  </bpmn:process>
  
</bpmn:definitions>