# Environment variables for Docker Compose deployment
# Copy this file to .env and update with your values

# Database
DB_PASSWORD=refdata_pass

# Keycloak
KEYCLOAK_ADMIN_PASSWORD=admin

# Spring profiles
SPRING_PROFILES_ACTIVE=docker

# Java Options
JAVA_OPTS=-Xms512m -Xmx1024m

# Kafka
KAFKA_HEAP_OPTS=-Xms256m -Xmx512m
# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=reference_db
DB_USER=reference_user
DB_PASSWORD=reference_pass

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
SCHEMA_REGISTRY_URL=http://localhost:8081

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8085
KEYCLOAK_REALM=reference-data
KEYCLOAK_CLIENT_ID=reference-api
KEYCLOAK_CLIENT_SECRET=change-me-in-production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# OpenSearch Configuration
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=

# Application Configuration
API_PORT=8080
LOG_LEVEL=INFO
SPRING_PROFILES_ACTIVE=dev

# OpenMetadata Configuration
OPENMETADATA_URL=http://localhost:8585
OPENMETADATA_API_KEY=change-me
OPENMETADATA_DB_HOST=localhost
OPENMETADATA_DB_PORT=5432
OPENMETADATA_DB_USER=reference_user
OPENMETADATA_DB_PASSWORD=reference_pass

# Kafka UI Configuration
KAFKA_UI_PORT=8082

# Development & Testing
TESTCONTAINERS_POSTGRES_IMAGE=postgres:16-alpine
TESTCONTAINERS_KAFKA_IMAGE=confluentinc/cp-kafka:7.5.3
TESTCONTAINERS_OPENSEARCH_IMAGE=opensearchproject/opensearch:2.11.1

# Security
JWT_SECRET=change-me-in-production-very-long-secret-key-here
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:8080

# Performance
DB_CONNECTION_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000
CACHE_TTL_SECONDS=3600

# Monitoring
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when_authorized